
@{
    ViewData["Title"] = "IndexCitas";
    Layout = "~/Views/Template/LayoutClientes.cshtml";
}
@section Estilos
{
    <link rel="stylesheet" href="~/css/PerfilPaciente.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
}

    <div class="container" style="padding-top: 40px;">

      <div class="row">

          <div class="col" style="margin-bottom: 40px;">

              <div class="card">
                  <div class="card-header">
                    Citas del paciente
                  </div>
                  <div class="card-body">

                      <div id="scrollCitas">

                          <div class="card" style="width: 18rem;">
                              <div class="card-header bg-warning" style="display: flex; align-items: baseline; justify-content: space-between; padding: 0px; padding-left: 10px;">
                                <strong>NumCita: <strong class="text-danger">HHIU87</strong></strong>
                                <a href="#" style="margin-right: 10px; margin-top: 10px; margin-bottom: 10px;" class="btn btn-dark">Editar</a>
                              </div>
                              <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Fecha</strong> @DateTime.Now</li>
                                <li class="list-group-item"><strong>Paciente:</strong> Mario Hernandez</li>
                                <li class="list-group-item"><strong>DUI:</strong> 076349887</li>
                                <li class="list-group-item"><strong>Personal:</strong> Josue Ortega</li>
                                <li class="list-group-item"><strong>Especialidad:</strong> Pediatria</li>
                                <li class="list-group-item"><strong>Estado:</strong> <strong class="text-danger" style="font-weight: 400;">Pendiente</strong></li>
                                <li class="list-group-item"><strong>Metodo Pago:</strong> PayPal</li>
                                <li class="list-group-item"><strong>Precio:</strong> 10.00</li>
                              </ul>
                          </div>

                      </div>

                  </div>
                  <div class="card-footer">
                      <a asp-action="IndexPerfil" asp-controller="PerfilPaciente" style="margin-right: 10px; margin-top: 10px; margin-bottom: 10px;" class="btn btn-outline-secondary">Regresar al perfil</a>
                      <a asp-action="AgregarCita" asp-controller="PerfilPaciente" style="margin-right: 10px; margin-top: 10px; margin-bottom: 10px;" class="btn btn-outline-danger">Agregar Cita</a>
                  </div>
              </div>

          </div>

      </div>

    </div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}


